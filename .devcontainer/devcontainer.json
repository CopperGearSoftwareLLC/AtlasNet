{
  "name": "Ubuntu Dev Container",
  "image": "ubuntu:24.04",

  // Run commands after container is created
  "postCreateCommand": "apt-get update && apt-get install -y build-essential git cmake",

  // Forward ports if needed
  "forwardPorts": [8080, 3000, 5000],

  // Bind your workspace into the container
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind"
  ],

  "remoteUser": "root",

  // Optional: VSCode features support
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools-extension-pack",
        "ms-azuretools.vscode-docker",
        "docker.docker",
        "PKief.material-icon-theme",
        "cschlosser.doxdocgen",
        "mhutchie.git-graph"
      ]
    }
  }
}
