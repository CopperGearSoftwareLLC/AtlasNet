{
  "name": "AtlasNet + DinD + WebDesktop (LLVMpipe)",
  "build": {
    "dockerfile": "Dockerfile"
  },
  //"postCreateCommand": "sudo usermod -aG docker $USER && sudo chmod 666 /var/run/docker.sock",
  "overrideCommand": false,
  "remoteUser": "vscode",
  "runArgs": [
    "--init",
    "--shm-size=2g" ,
    //"--network=host",
    //"--memory=10g",
    //"--memory-swap=10g",
     "--cap-add=SYS_PTRACE",
    "--cap-add=SYS_ADMIN",                 // sometimes needed for perf/tracepoints
    "--security-opt=seccomp=unconfined"    // Docker default seccomp blocks perf_event_open
  ],
  "mounts": [
    "source=dind-var-lib-docker,target=/var/lib/docker,type=volume"
  ],
  "forwardPorts": [
    3000,
    5000,
    8000,
    8080,
    8443,
    9443,
    5901,
    6080
  ],
  "portsAttributes": {
    "6080": {
      "label": "Web Desktop (noVNC)",
      "onAutoForward": "openBrowser"
    },
    "5901": {
      "label": "VNC (raw)",
      "onAutoForward": "silent"
    },
      "9000": { "label": "Portainer (HTTP)", "onAutoForward": "openBrowser" },
  "9443": { "label": "Portainer (HTTPS)", "onAutoForward": "silent" }
  },
  "containerEnv": {
    "DISPLAY": ":1",
    "LIBGL_ALWAYS_SOFTWARE": "1",
    "MESA_LOADER_DRIVER_OVERRIDE": "llvmpipe",
    "GALLIUM_DRIVER": "llvmpipe"
  },
  "features": {
    "ghcr.io/msclock/features/vcpkg:2": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/ebaskoro/devcontainer-features/emscripten:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "llvm-vs-code-extensions.vscode-clangd",
        "ms-azuretools.vscode-docker",
        "PKief.material-icon-theme",
        "ms-vscode.cmake-tools",
        "ms-azuretools.vscode-containers",
        "docker.docker",
        "mhutchie.git-graph",
        "ms-vscode.cpptools-extension-pack",
        "cweijan.dbclient-jdbc",
        "cweijan.vscode-redis-client",
        "mutantdino.resourcemonitor",
        "vscjava.vscode-java-pack",
        "twxs.cmake"
      ]
    }
  }
}