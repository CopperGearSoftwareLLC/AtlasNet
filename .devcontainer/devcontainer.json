{
  "name": "AtlasNet + DooD + WebDesktop (LLVMpipe)",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "overrideCommand": false,
  "remoteUser": "vscode",
  "postStartCommand": "/bin/bash .devcontainer/post-start.sh",
  "runArgs": [
    "--init",
    "--shm-size=2g" ,
    "--add-host=host.docker.internal:host-gateway",
    "--network=host",
    //"--memory=10g",
    //"--memory-swap=10g",
     "--cap-add=SYS_PTRACE",
    "--cap-add=SYS_ADMIN",                 // sometimes needed for perf/tracepoints
    "--security-opt=seccomp=unconfined"    // Docker default seccomp blocks perf_event_open
  ],
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "forwardPorts": [
    9000,
    3000,
    5000,
    8000,
    8080,
    8443,
    9443,
    5901,
    6080
  ],
  "portsAttributes": {
    "6080": {
      "label": "Web Desktop (noVNC)",
      "onAutoForward": "openBrowser"
    },
    "5901": {
      "label": "VNC (raw)",
      "onAutoForward": "silent"
    },
    "9000": {
      "label": "Portainer (HTTP)",
      "onAutoForward": "openBrowser"
    },
    "9443": {
      "label": "Portainer (HTTPS)",
      "onAutoForward": "silent"
    }
  },
  "containerEnv": {
    "DOCKER_HOST": "unix:///var/run/docker.sock",
    "DISPLAY": ":1",
    "LIBGL_ALWAYS_SOFTWARE": "1",
    "MESA_LOADER_DRIVER_OVERRIDE": "llvmpipe",
    "GALLIUM_DRIVER": "llvmpipe"
  },
  "features": {
    "ghcr.io/rio/features/k3d:1": {},
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {},
    "ghcr.io/msclock/features/vcpkg:2": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "remote.restoreForwardedPorts": false,
        "remote.autoForwardPorts": false
      },
      "extensions": [
        "llvm-vs-code-extensions.vscode-clangd",
        "ms-azuretools.vscode-docker",
        "PKief.material-icon-theme",
        "ms-vscode.cmake-tools",
        "ms-azuretools.vscode-containers",
        "docker.docker",
        "mhutchie.git-graph",
        "ms-vscode.cpptools-extension-pack",
        "cweijan.dbclient-jdbc",
        "cweijan.vscode-redis-client",
        "mutantdino.resourcemonitor",
        "vscjava.vscode-java-pack",
        "twxs.cmake",
        "tintinweb.graphviz-interactive-preview",
        "ms-vscode.hexeditor"
      ]
    }
  }
}
