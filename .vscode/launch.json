{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "AtlasNet UnitTest",
      "type": "node",              // any debugger type, doesn't matter
      "request": "launch",
      "program": "${workspaceFolder}/noop.js", // dummy, not used
      "preLaunchTask": "AtlasNet Start",
      "noDebug": true
    },
    {
      "name": "Debug Partition + Unit Tests",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/DebugDocker/Partition/Partition",
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "preLaunchTask": "Run Partition + Unit Tests Docker",
      "miDebuggerServerAddress": "localhost:1235",
      "miDebuggerPath": "/usr/bin/gdb",
      "stopAtEntry": false,
      
    },
    {
      "name": "Debug God Docker",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/DebugDocker/God/God",
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "preLaunchTask": "Run God Docker",
      "miDebuggerServerAddress": "localhost:1234",
      "stopAtEntry": false,
      
      
    },
    
    {
      "name": "Debug GodView",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/DebugDocker/GodView/GodView",
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "preLaunchTask": "Compile For Docker",
      "stopAtEntry": false,
      
    }
  ],
  "inputs": [
    {
      "id": "debugPort",
      "type": "promptString",
      "description": "Enter gdbserver port",
      "default": "1234"
    }
  ],

    "compounds": [
        {
            "name": "Debug Partion + Gameserver",
            "configurations": ["Attach To Partition", "Attach To SampleGame"]
        }
    ]
}