{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Sample Game Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/DebugDocker/SampleGame/SampleGame",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
            "preLaunchTask": "Compile For Docker",
      "setupCommands": [
          {
              "description": "Enable pretty-printing for gdb",
              "text": "-enable-pretty-printing",
              "ignoreFailures": true
          },
          {
              "description": "Set Disassembly Flavor to Intel",
              "text": "-gdb-set disassembly-flavor intel",
              "ignoreFailures": true
          }
      ]
    },
  
    {
      "name": "Debug God Docker",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/DebugDocker/God/God",
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "miDebuggerServerAddress": "localhost:1234",
      "stopAtEntry": false,
      "preLaunchTask": "Run Docker Container",
    },
    {
      "name": "Debug God Local",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/DebugLocal/God/God",
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "stopAtEntry": false,
      "preLaunchTask": "Compile For Local",
    },
    {
      "name": "Attach To Docker",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/DebugDocker/Partition/Partition",
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "miDebuggerServerAddress": "localhost:${input:debugPort}",
      "stopAtEntry": false,
      "preLaunchTask": "Compile For Docker",
    },
  ],
  "inputs": [
    {
      "id": "debugPort",
      "type": "promptString",
      "description": "Enter gdbserver port",
      "default": "1234"
    }
  ]
}