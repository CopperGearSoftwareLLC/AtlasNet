{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Sample Game Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/DebugDocker/SampleGame/SampleGame",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
            "preLaunchTask": "Compile For Docker",
      "setupCommands": [
          {
              "description": "Enable pretty-printing for gdb",
              "text": "-enable-pretty-printing",
              "ignoreFailures": true
          },
          {
              "description": "Set Disassembly Flavor to Intel",
              "text": "-gdb-set disassembly-flavor intel",
              "ignoreFailures": true
          }
      ]
    },
    {
      "name": "Debug Partition Docker",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/DebugDocker/Partition/Partition",
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "preLaunchTask": "Run Partition",
      "miDebuggerServerAddress": "localhost:1235",
      "stopAtEntry": false,
      
    },

    {
      "name": "Debug God Docker",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/DebugDocker/God/God",
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "preLaunchTask": "Run God",
      "miDebuggerServerAddress": "localhost:1234",
      "stopAtEntry": false,
      
    },
    {
      "name": "Debug GodView",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/DebugDocker/GodView/GodView",
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "preLaunchTask": "Compile For Docker",
      "stopAtEntry": false,
      
    },
    {
      "name": "Debug God Local",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/DebugLocal/God/God",
      "envFile": "${workspaceFolder}/KDNetVars.sh",
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "stopAtEntry": false,
      "preLaunchTask": "Compile For Local",
    },
    {
      "name": "Attach To Partition",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/DebugDocker/Partition/Partition",
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "preLaunchTask": "Run Partition",
      "miDebuggerServerAddress": "localhost:1235",
      "stopAtEntry": false,
    },
        {
      "name": "Attach To SampleGame",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/DebugDocker/SampleGame/SampleGame",
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "preLaunchTask": "Compile For Docker",
      "miDebuggerServerAddress": "localhost:1236",
      "stopAtEntry": false,
    },
      {
      "name": "Attach To God",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/DebugDocker/God/God",
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "preLaunchTask": "Compile For Docker",
      "miDebuggerServerAddress": "localhost:${input:debugPort}",
      "stopAtEntry": false,
    },
  ],
  "inputs": [
    {
      "id": "debugPort",
      "type": "promptString",
      "description": "Enter gdbserver port",
      "default": "1234"
    }
  ],

    "compounds": [
        {
            "name": "Debug Partion + Gameserver",
            "configurations": ["Attach To Partition", "Attach To SampleGame"]
        }
    ]
}