{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "AtlasNet Start",
      "type": "shell",
      "dependsOn": "Setup Docker Images. SampleGame",
      "command": "premake5",
      "args": [ "AtlasNetStart","--testid=${input:TestNumber}"],
      "options": {
        "cwd": "${workspaceFolder}" // working directory
      },
    },
    {
      "label": "premake",
      "type": "shell",
      "command": "premake5",
      "args": [ "gmake"],
      "options": {
        "cwd": "${workspaceFolder}" // working directory
      },
    },
    {
      "label": "make",
      "type": "shell",
      "dependsOn": "premake",
      "command": "make",
      "args": [ "-C","build","-j","$(nproc)"],
      "options": {
        "cwd": "${workspaceFolder}" // working directory
      },
    }
  ],
  "inputs": [
    {
      "id": "TestNumber",
      "type": "promptString",
      "description": "Enter an Test ID: (0 for unitTests)",
      "default": "-1"
    }
  ]
}
