{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "AtlasNet Start",
      "type": "shell",
      "dependsOn": "Setup Docker Images. SampleGame",
      "command": "./premake5",
      "args": [ "AtlasNetStart","--testid=${input:TestNumber}"],
      "options": {
        "cwd": "${workspaceFolder}" // working directory
      },
    },
    {
      "label": "Run God Docker",
      "type": "shell",
      "dependsOn": "Setup Docker Images. SampleGame",
      "command": "./premake5",
      "args": [ "run-docker-image","--target=God","--build-config=DebugDocker","--testid=${input:TestNumber}"],
      "options": {
        "cwd": "${workspaceFolder}" // working directory
      },
    },
     {
      "label": "Run Partition + Unit Tests Docker",
      "type": "shell",
      "dependsOn": "Setup Docker Images. SampleGame",
    "command": "./premake5",
      "args": [ "run-docker-image","--target=Partition","--build-config=DebugDocker","--app-bundle=UnitTests","--testid=${input:TestNumber}"],
      "options": {
        "cwd": "${workspaceFolder}" // working directory
      },
    }
  ],
  "inputs": [
    {
      "id": "TestNumber",
      "type": "promptString",
      "description": "Enter an Test ID: (0 for unitTests)",
      "default": "-1"
    }
  ]
}
