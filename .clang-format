BasedOnStyle: Google

# Tabs / indentation
IndentWidth: 4        # how many spaces one indent level is
TabWidth: 4           # how wide a literal '\t' displays
UseTab: Always         # Never | ForIndentation | AlignWithSpaces | Always

# Line breaking
ColumnLimit: 100

# Braces / layout (tasteful defaults)
BreakBeforeBraces: Allman   # or Attach, Stroustrup, Linux
AllowShortIfStatementsOnASingleLine: Never
AllowShortFunctionsOnASingleLine: Inline
